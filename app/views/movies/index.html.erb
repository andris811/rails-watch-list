<div class="container">
  <h1>Movies</h1>
  <div class="movies-grid">
    <% @movies.each do |movie| %>
      <div class="box-poster">
        <%= link_to movie_path(movie) do %>
          <%= image_tag movie.poster_url, class: 'img-poster' %>
        <% end %>
        <p class="movie-path"><%= movie.title %></p>
      </div>
    <% end %>
  </div>
</div>

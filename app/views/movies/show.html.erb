<div class="container">
  <div class="row movie-display">
    <div class="col-lg-6">
      <img class="img-poster" src="<%= @movie.poster_url %>" >
    </div>
    <div class="col-lg-6">
      <div>
        <h3><%= @movie.title %></h3>
      </div>
      <div>
        <p>Rating: <span><%= @movie.rating %></span></p>
      </div>
      <div>
        <p><%= @movie.overview %></p>
      </div>
    </div>
  </div>
</div>
